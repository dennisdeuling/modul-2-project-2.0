<fieldset>
	<div class="form-row">
		<div class="form-group col-md-12">
			<label class="col-form-label" for="headline">Headline for your apartment:</label>
			<input type="text" class="form-control" id="headline" name="headline" value="{{apartment.headline}}">
		</div>
		<div class="form-group col-md-6">
			<label class="col-form-label" for="address">Address</label>
			<input type="text" class="form-control" id="address" name="address" value="{{apartment.address}}">
		</div>
		<div class="form-group col-md-6">
			<label class="col-form-label" for="city">City</label>
			<input type="text" class="form-control" id="city" name="city" value="{{apartment.city}}">
		</div>
		<div class="form-group col-md-6">
			<label class="col-form-label" for="country">Country</label>
			<input type="text" class="form-control" id="country" name="country" value="{{apartment.country}}">
		</div>
		<div class="form-group col-md-6">
			<label class="col-form-label" for="zipCode">Zip</label>
			<input type="text" class="form-control" id="zipCode" name="zipCode" value="{{apartment.zipCode}}">
		</div>
		<div class="form-group col-md-3">
			<label class="col-form-label" for="bedrooms">Bed rooms</label>
			<input type="number" class="form-control" id="bedrooms" name="bedrooms"
				   value="{{apartment.rooms.bedrooms}}">
		</div>
		<div class="form-group col-md-3">
			<label class="col-form-label" for="livingrooms">Living rooms</label>
			<input type="number" class="form-control" id="livingrooms" name="livingrooms"
				   value="{{apartment.rooms.livingrooms}}">
		</div>
		<div class="form-group col-md-3">
			<label class="col-form-label" for="bathrooms">Bath rooms</label>
			<input type="number" class="form-control" id="bathrooms" name="bathrooms"
				   value="{{apartment.rooms.bathrooms}}">
		</div>
		<div class="form-group col-md-3">
			<label class="col-form-label" for="kitchens">Kitchens</label>
			<input type="number" class="form-control" id="kitchens" name="kitchens"
				   value="{{apartment.rooms.kitchens}}">
		</div>
		<div class="form-group col-md-12">
			<label class="col-form-label" for="text">Text for your apartment:</label>
			<textarea class="form-control" id="text" rows="10" name="text">{{apartment.text}}</textarea>
		</div>
		{{> apartmentPics }}
		<div class="form-group col-md-6">
			<legend>Facilities</legend>
			<div class="custom-control custom-checkbox">
				<input type="checkbox" class="custom-control-input" id="wifi" name="wifi" value="true"
					   {{#if apartment.facilities.wifi}}checked{{/if}}>
				<label class="custom-control-label" for="wifi">WiFi</label>
			</div>
			<div class="custom-control custom-checkbox">
				<input type="checkbox" class="custom-control-input" id="tv" name="tv" value="true"
					   {{#if apartment.facilities.tv}}checked{{/if}}>
				<label class="custom-control-label" for="tv">TV</label>
			</div>
			<div class="custom-control custom-checkbox">
				<input type="checkbox" class="custom-control-input" id="washer" name="washer" value="true"
					   {{#if apartment.facilities.washer}}checked{{/if}}>
				<label class="custom-control-label" for="washer">Washer</label>
			</div>
			<div class="custom-control custom-checkbox">
				<input type="checkbox" class="custom-control-input" id="dryer" name="dryer" value="true"
					   {{#if apartment.facilities.dryer}}checked{{/if}}>
				<label class="custom-control-label" for="dryer">Dryer</label>
			</div>
			<div class="custom-control custom-checkbox">
				<input type="checkbox" class="custom-control-input" id="dishwasher" name="dishwasher" value="true"
					   {{#if apartment.facilities.dishwasher}}checked{{/if}}>
				<label class="custom-control-label" for="dishwasher">Dishwasher</label>
			</div>
			<div class="custom-control custom-checkbox">
				<input type="checkbox" class="custom-control-input" id="parkinglot" name="parkinglot" value="true"
					   {{#if apartment.facilities.parkinglot}}checked{{/if}}>
				<label class="custom-control-label" for="parkinglot">Parkinglot</label>
			</div>
		</div>
		<div class="form-group col-md-6">
			<label class="col-form-label" for="guests">How many guests:</label>
			<input type="number" class="form-control" id="guests" name="guests" value="{{apartment.guests}}">
		</div>
		<div class="form-group col-md-6">
			<label class="col-form-label" for="price">How much is the price for one night:</label>
			<input type="number" class="form-control" id="price" name="price" value="{{apartment.price}}">
		</div>
	</div>
</fieldset>